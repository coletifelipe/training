					<?php

						for ($f = 0; $f < $max_form; $f++) {




							$nome_form = utf8_encode(mysql_result($res_form, $f, "nome_formacao"));
							$abrev_form  = utf8_encode(mysql_result($res_form, $f, "nome_abrev_form"));
							$url_form  = "/formacao/" . mysql_result($res_form, $f, "url");
